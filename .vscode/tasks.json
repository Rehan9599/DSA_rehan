{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run All C++ Files",
            "type": "shell",
            // Use cmd.exe on Windows to run g++ and then the produced .exe
            "command": "cmd.exe",
            "args": [
                "/c",
                "g++ \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}